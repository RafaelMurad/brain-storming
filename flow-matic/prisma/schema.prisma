generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  description String?
  nodes       String   // JSON string of nodes
  edges       String   // JSON string of edges
  variables   String   @default("{}") // JSON string of variables
  isActive    Boolean  @default(false)
  lastRun     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  executions  Execution[]
}

model Execution {
  id          String   @id @default(uuid())
  workflowId  String
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  status      String   @default("pending") // pending, running, completed, failed
  input       String?  // JSON input data
  output      String?  // JSON output data
  logs        String   @default("[]") // JSON array of log entries
  startedAt   DateTime @default(now())
  completedAt DateTime?
  error       String?
}

model NodeTemplate {
  id          String   @id @default(uuid())
  type        String   // trigger, action, condition, transform, output
  name        String
  description String?
  icon        String?
  config      String   // JSON schema for node configuration
  category    String   @default("general")
  createdAt   DateTime @default(now())
}
