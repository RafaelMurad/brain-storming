# SnapForge Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/snapforge"

# API Keys (generate your own for production)
API_KEY_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Screenshot Settings
SCREENSHOT_TIMEOUT=30000
MAX_SCREENSHOT_WIDTH=1920
MAX_SCREENSHOT_HEIGHT=1080

# Feature Flags
FEATURE_PDF_EXPORT=true
FEATURE_FULL_PAGE_CAPTURE=true
FEATURE_CUSTOM_VIEWPORT=true
FEATURE_DELAY_CAPTURE=true
FEATURE_ELEMENT_SELECTOR=true
FEATURE_WEBHOOK_CALLBACK=false

# Storage (local for development)
STORAGE_TYPE=local
STORAGE_PATH=./screenshots

# Logging
LOG_LEVEL=debug
