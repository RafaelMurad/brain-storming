# PulseWatch Environment Configuration

# Server
PORT=3002
NODE_ENV=development
API_BASE_URL=http://localhost:3002

# Database
DATABASE_URL="file:./dev.db"

# Reddit API (get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USERNAME=your_username
REDDIT_PASSWORD=your_password
REDDIT_USER_AGENT=PulseWatch/1.0.0

# OpenAI (for sentiment analysis and lead scoring)
OPENAI_API_KEY=your_openai_api_key

# API Security
API_KEY_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Settings
SCAN_INTERVAL_MINUTES=15
MAX_POSTS_PER_SCAN=100
SENTIMENT_BATCH_SIZE=10

# Feature Flags
FEATURE_REDDIT_MONITORING=true
FEATURE_TWITTER_MONITORING=false
FEATURE_AI_SCORING=true
FEATURE_EMAIL_ALERTS=false
FEATURE_WEBHOOK_ALERTS=true
FEATURE_SLACK_INTEGRATION=false

# Logging
LOG_LEVEL=debug
