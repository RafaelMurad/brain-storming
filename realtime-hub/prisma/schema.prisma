// RealtimeHub - WebSocket Real-time Communication API
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id          String   @id @default(uuid())
  key         String   @unique
  name        String
  projectId   String
  permissions String   @default("read,write")
  maxConnections Int   @default(1000)
  isActive    Boolean  @default(true)
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id @default(uuid())
  name        String
  settings    String   @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  apiKeys     ApiKey[]
  rooms       Room[]
  channels    Channel[]
}

model Room {
  id          String   @id @default(uuid())
  projectId   String
  name        String
  type        String   @default("public") // public, private, direct
  maxMembers  Int      @default(100)
  metadata    String   @default("{}")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages    Message[]
  @@unique([projectId, name])
}

model Channel {
  id          String   @id @default(uuid())
  projectId   String
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  @@unique([projectId, name])
}

model Message {
  id          String   @id @default(uuid())
  roomId      String
  userId      String
  type        String   @default("text") // text, system, event
  content     String
  metadata    String   @default("{}")
  createdAt   DateTime @default(now())
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  @@index([roomId, createdAt])
}

model Connection {
  id          String   @id @default(uuid())
  projectId   String
  userId      String
  socketId    String   @unique
  roomIds     String   @default("[]")
  metadata    String   @default("{}")
  connectedAt DateTime @default(now())
  lastPingAt  DateTime @default(now())
  @@index([projectId, userId])
}

model PresenceState {
  id          String   @id @default(uuid())
  projectId   String
  userId      String
  status      String   @default("online") // online, away, busy, offline
  customStatus String?
  metadata    String   @default("{}")
  lastSeenAt  DateTime @default(now())
  @@unique([projectId, userId])
}
