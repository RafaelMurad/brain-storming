# ZenTeam Environment Configuration

# Server
PORT=3003
NODE_ENV=development
API_BASE_URL=http://localhost:3003

# Database
DATABASE_URL="file:./dev.db"

# Slack (create app at https://api.slack.com/apps)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# OpenAI (for sentiment analysis)
OPENAI_API_KEY=your-openai-api-key

# API Security
API_KEY_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Check-in Settings
CHECKIN_ENABLED=true
CHECKIN_TIME=09:00
CHECKIN_TIMEZONE=America/New_York
CHECKIN_DAYS=1,2,3,4,5

# Feature Flags
FEATURE_DAILY_CHECKINS=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_BURNOUT_PREDICTION=true
FEATURE_TEAM_ACTIVITIES=true
FEATURE_ANONYMOUS_FEEDBACK=true
FEATURE_MANAGER_ALERTS=false

# Burnout Thresholds
BURNOUT_WARNING_THRESHOLD=40
BURNOUT_CRITICAL_THRESHOLD=25

# Logging
LOG_LEVEL=debug
