---
import Section from './Section.astro';
import Button from './Button.astro';
---

<Section
  id="contact"
  title="Contact"
  subtitle="Let's create something meaningful together"
  number="04"
>
  <div class="space-y-12">
    <!-- Introduction -->
    <div data-animate class="space-y-4">
      <p class="text-xl text-nordic-gray-700 leading-relaxed">
        Have a project in mind? I'd love to hear about it.
      </p>
      <p class="text-nordic-gray-500 max-w-readable">
        Whether you need help with design, development, or both - let's discuss
        how we can work together to bring your vision to life.
      </p>
    </div>

    <!-- Contact form -->
    <form data-animate class="space-y-6" id="contact-form">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Name field -->
        <div class="space-y-2">
          <label
            for="name"
            class="block text-sm font-medium text-nordic-gray-600"
          >
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Your name"
            class="w-full px-4 py-3 bg-white border border-nordic-gray-200 rounded-lg
                   text-nordic-black placeholder-nordic-gray-400
                   focus:outline-none focus:border-nordic-accent focus:ring-1 focus:ring-nordic-accent
                   transition-all duration-300"
          />
        </div>

        <!-- Email field -->
        <div class="space-y-2">
          <label
            for="email"
            class="block text-sm font-medium text-nordic-gray-600"
          >
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="your@email.com"
            class="w-full px-4 py-3 bg-white border border-nordic-gray-200 rounded-lg
                   text-nordic-black placeholder-nordic-gray-400
                   focus:outline-none focus:border-nordic-accent focus:ring-1 focus:ring-nordic-accent
                   transition-all duration-300"
          />
        </div>
      </div>

      <!-- Subject field -->
      <div class="space-y-2">
        <label
          for="subject"
          class="block text-sm font-medium text-nordic-gray-600"
        >
          Subject
        </label>
        <select
          id="subject"
          name="subject"
          class="w-full px-4 py-3 bg-white border border-nordic-gray-200 rounded-lg
                 text-nordic-black
                 focus:outline-none focus:border-nordic-accent focus:ring-1 focus:ring-nordic-accent
                 transition-all duration-300 appearance-none
                 bg-no-repeat bg-right"
          style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%239aa0a6%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e'); background-position: right 1rem center; background-size: 1rem;"
        >
          <option value="">Select a topic</option>
          <option value="project">New Project</option>
          <option value="collaboration">Collaboration</option>
          <option value="consultation">Consultation</option>
          <option value="other">Other</option>
        </select>
      </div>

      <!-- Message field -->
      <div class="space-y-2">
        <label
          for="message"
          class="block text-sm font-medium text-nordic-gray-600"
        >
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          placeholder="Tell me about your project..."
          class="w-full px-4 py-3 bg-white border border-nordic-gray-200 rounded-lg
                 text-nordic-black placeholder-nordic-gray-400 resize-none
                 focus:outline-none focus:border-nordic-accent focus:ring-1 focus:ring-nordic-accent
                 transition-all duration-300"></textarea>
      </div>

      <!-- Submit button -->
      <div class="flex items-center gap-4 pt-2">
        <Button type="submit" variant="primary" size="lg">
          Send message
        </Button>
        <p class="text-sm text-nordic-gray-400">
          I'll respond within 24-48 hours
        </p>
      </div>
    </form>

    <!-- Alternative contact methods -->
    <div
      data-animate
      class="pt-8 border-t border-nordic-gray-200 grid grid-cols-1 md:grid-cols-3 gap-6"
    >
      <!-- Email -->
      <a
        href="mailto:hello@nordic.dev"
        class="group p-6 border border-nordic-gray-100 rounded-lg
               hover:border-nordic-gray-200 hover:bg-nordic-gray-50/30
               transition-all duration-300"
      >
        <div class="flex items-center gap-3 mb-2">
          <svg
            class="w-5 h-5 text-nordic-gray-400 group-hover:text-nordic-accent transition-colors"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <span class="text-sm font-medium text-nordic-gray-600">Email</span>
        </div>
        <p class="text-nordic-black font-medium">hello@nordic.dev</p>
      </a>

      <!-- LinkedIn -->
      <a
        href="#"
        class="group p-6 border border-nordic-gray-100 rounded-lg
               hover:border-nordic-gray-200 hover:bg-nordic-gray-50/30
               transition-all duration-300"
      >
        <div class="flex items-center gap-3 mb-2">
          <svg
            class="w-5 h-5 text-nordic-gray-400 group-hover:text-nordic-accent transition-colors"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          <span class="text-sm font-medium text-nordic-gray-600">LinkedIn</span>
        </div>
        <p class="text-nordic-black font-medium">Connect with me</p>
      </a>

      <!-- Location -->
      <div
        class="p-6 border border-nordic-gray-100 rounded-lg bg-nordic-gray-50/30"
      >
        <div class="flex items-center gap-3 mb-2">
          <svg
            class="w-5 h-5 text-nordic-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm font-medium text-nordic-gray-600">Location</span>
        </div>
        <p class="text-nordic-black font-medium">Stockholm, Sweden</p>
      </div>
    </div>
  </div>
</Section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Here you would typically send the form data to a server
    // For now, we'll just show a success message
    const formData = new FormData(form);
    console.log('Form submitted:', Object.fromEntries(formData));

    // Show success feedback
    const button = form.querySelector('button[type="submit"]');
    if (button) {
      const originalText = button.textContent;
      button.textContent = 'Message sent!';
      button.classList.add('bg-green-600');

      setTimeout(() => {
        button.textContent = originalText;
        button.classList.remove('bg-green-600');
        form.reset();
      }, 3000);
    }
  });
</script>
