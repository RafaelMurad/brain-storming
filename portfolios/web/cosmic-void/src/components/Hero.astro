---
import Button from './Button.astro';
import Planet from './Planet.astro';

interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<section id="hero" class="relative min-h-screen flex items-center justify-center pt-20 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-12 items-center">
    <!-- Content -->
    <div class="text-center lg:text-left z-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cosmic-purple/20 border border-cosmic-purple/30 mb-6">
        <span class="w-2 h-2 rounded-full bg-cosmic-cyan animate-pulse"></span>
        <span class="text-sm text-cosmic-cyan font-medium">{subtitle}</span>
      </div>

      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
        <span class="text-white">{title.split(' ').slice(0, -1).join(' ')} </span>
        <span class="text-gradient">{title.split(' ').slice(-1)}</span>
      </h1>

      <p class="text-gray-400 text-lg md:text-xl max-w-xl mx-auto lg:mx-0 mb-8 leading-relaxed">
        {description}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
        <Button href="#work" variant="primary">View My Work</Button>
        <Button href="#contact" variant="secondary">Get in Touch</Button>
      </div>

      <!-- Stats -->
      <div class="flex gap-8 mt-12 justify-center lg:justify-start">
        <div class="text-center">
          <span class="block font-display text-3xl font-bold text-white">50+</span>
          <span class="text-gray-500 text-sm">Projects</span>
        </div>
        <div class="text-center">
          <span class="block font-display text-3xl font-bold text-white">5+</span>
          <span class="text-gray-500 text-sm">Years Exp</span>
        </div>
        <div class="text-center">
          <span class="block font-display text-3xl font-bold text-white">100%</span>
          <span class="text-gray-500 text-sm">Satisfaction</span>
        </div>
      </div>
    </div>

    <!-- Visual -->
    <div class="relative flex items-center justify-center">
      <Planet />
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
    <span class="text-gray-500 text-sm uppercase tracking-widest">Scroll</span>
    <div class="w-6 h-10 rounded-full border-2 border-gray-500 flex justify-center pt-2">
      <div class="w-1.5 h-3 bg-cosmic-cyan rounded-full animate-bounce"></div>
    </div>
  </div>
</section>
