---
interface Props {
  title: string;
  description: string;
  tags: string[];
  image?: string;
  href?: string;
}

const { title, description, tags, image, href = '#' } = Astro.props;
---

<article class="group relative overflow-hidden rounded-2xl bg-cosmic-dark/50 border border-white/10
               transition-all duration-500 hover:border-cosmic-cyan/50 hover:shadow-[0_0_40px_rgba(0,212,255,0.15)]">
  <!-- Image -->
  <div class="relative h-48 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-cosmic-purple/30 to-cosmic-blue/30"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-cosmic-dark via-transparent to-transparent"></div>
    {image && <img src={image} alt={title} class="w-full h-full object-cover opacity-50 group-hover:opacity-70 transition-opacity duration-500" />}

    <!-- Hover overlay -->
    <div class="absolute inset-0 bg-cosmic-cyan/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="font-display text-xl font-bold text-white mb-2 group-hover:text-cosmic-cyan transition-colors">
      {title}
    </h3>
    <p class="text-gray-400 text-sm mb-4 line-clamp-2">{description}</p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag) => (
        <span class="px-3 py-1 text-xs font-medium text-cosmic-cyan bg-cosmic-cyan/10 rounded-full border border-cosmic-cyan/20">
          {tag}
        </span>
      ))}
    </div>

    <!-- Link -->
    <a
      href={href}
      class="inline-flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-cosmic-cyan transition-colors"
    >
      View Project
      <span class="transform group-hover:translate-x-1 transition-transform">â†’</span>
    </a>
  </div>
</article>
