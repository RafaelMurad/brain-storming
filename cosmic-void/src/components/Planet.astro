---
// Animated planet component with orbital rings
---

<div class="planet-container relative w-80 h-80 md:w-96 md:h-96">
  <!-- Orbital rings -->
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="orbit-ring w-full h-full border border-cosmic-purple/30 rounded-full animate-orbit" style="animation-duration: 20s;"></div>
  </div>
  <div class="absolute inset-4 flex items-center justify-center">
    <div class="orbit-ring w-full h-full border border-cosmic-cyan/20 rounded-full animate-orbit" style="animation-duration: 15s; animation-direction: reverse;"></div>
  </div>
  <div class="absolute inset-8 flex items-center justify-center">
    <div class="orbit-ring w-full h-full border border-cosmic-pink/20 rounded-full animate-orbit" style="animation-duration: 25s;"></div>
  </div>

  <!-- Planet core -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 md:w-40 md:h-40">
    <!-- Glow effect -->
    <div class="absolute inset-0 rounded-full bg-cosmic-cyan/20 blur-xl animate-pulse-glow"></div>

    <!-- Planet surface -->
    <div class="relative w-full h-full rounded-full overflow-hidden bg-gradient-to-br from-cosmic-dark via-cosmic-purple/30 to-cosmic-blue/20
                shadow-[inset_-20px_-20px_40px_rgba(0,0,0,0.5),inset_10px_10px_30px_rgba(0,212,255,0.1)]">
      <!-- Atmosphere -->
      <div class="absolute inset-0 rounded-full bg-gradient-to-t from-transparent via-transparent to-cosmic-cyan/10"></div>

      <!-- Surface details -->
      <div class="absolute top-1/4 left-1/4 w-8 h-8 rounded-full bg-cosmic-purple/20 blur-sm"></div>
      <div class="absolute bottom-1/3 right-1/4 w-6 h-6 rounded-full bg-cosmic-cyan/20 blur-sm"></div>
      <div class="absolute top-1/2 left-1/2 w-4 h-4 rounded-full bg-cosmic-pink/20 blur-sm"></div>
    </div>
  </div>

  <!-- Orbiting moons -->
  <div class="absolute inset-0 animate-orbit" style="animation-duration: 8s;">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-4 h-4 rounded-full bg-gradient-to-br from-white to-gray-400 shadow-lg"></div>
  </div>
  <div class="absolute inset-0 animate-orbit" style="animation-duration: 12s; animation-direction: reverse;">
    <div class="absolute bottom-4 right-4 w-3 h-3 rounded-full bg-gradient-to-br from-cosmic-cyan to-cosmic-blue shadow-lg"></div>
  </div>
</div>

<style>
  @keyframes orbit {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .animate-orbit {
    animation: orbit linear infinite;
  }
</style>
