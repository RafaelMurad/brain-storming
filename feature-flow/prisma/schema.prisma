generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id          String   @id @default(uuid())
  key         String   @unique
  name        String
  projectId   String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  apiKeys     ApiKey[]
  flags       FeatureFlag[]
  experiments Experiment[]
  segments    Segment[]
}

model FeatureFlag {
  id            String   @id @default(uuid())
  projectId     String
  key           String
  name          String
  description   String?
  type          String   @default("boolean") // boolean, string, number, json
  defaultValue  String   @default("false")
  enabled       Boolean  @default(false)
  rolloutPercentage Int  @default(100)
  targetingRules String  @default("[]") // JSON rules
  environments  String   @default("[]") // ["production", "staging"]
  tags          String   @default("[]")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  evaluations   FlagEvaluation[]
  @@unique([projectId, key])
}

model Experiment {
  id            String   @id @default(uuid())
  projectId     String
  key           String
  name          String
  description   String?
  status        String   @default("draft") // draft, running, paused, completed
  variants      String   @default("[]") // JSON array of variants with weights
  trafficAllocation Int  @default(100)
  targetingRules String  @default("[]")
  metrics       String   @default("[]") // metrics to track
  startedAt     DateTime?
  endedAt       DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignments   ExperimentAssignment[]
  conversions   ExperimentConversion[]
  @@unique([projectId, key])
}

model Segment {
  id          String   @id @default(uuid())
  projectId   String
  key         String
  name        String
  description String?
  rules       String   @default("[]") // JSON targeting rules
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  @@unique([projectId, key])
}

model FlagEvaluation {
  id          String   @id @default(uuid())
  flagId      String
  userId      String
  value       String
  reason      String   // matched_rule, default, percentage, disabled
  timestamp   DateTime @default(now())
  flag        FeatureFlag @relation(fields: [flagId], references: [id], onDelete: Cascade)
  @@index([flagId, timestamp])
  @@index([userId])
}

model ExperimentAssignment {
  id           String   @id @default(uuid())
  experimentId String
  userId       String
  variant      String
  timestamp    DateTime @default(now())
  experiment   Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  @@unique([experimentId, userId])
}

model ExperimentConversion {
  id           String   @id @default(uuid())
  experimentId String
  userId       String
  variant      String
  metric       String
  value        Float    @default(1)
  timestamp    DateTime @default(now())
  experiment   Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  @@index([experimentId, metric])
}
