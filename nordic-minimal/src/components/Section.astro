---
interface Props {
  id?: string;
  title: string;
  subtitle?: string;
  number?: string;
  class?: string;
  fullWidth?: boolean;
}

const {
  id,
  title,
  subtitle,
  number,
  class: className = '',
  fullWidth = false,
} = Astro.props;
---

<section id={id} class={`py-24 md:py-32 lg:py-40 ${className}`}>
  <div class={fullWidth ? 'w-full' : 'container-nordic'}>
    <!-- Section Header with Sticky Title -->
    <div class="grid-nordic mb-16 md:mb-20">
      <div class="col-span-4 md:col-span-3 lg:col-span-4">
        <div class="sticky top-24 md:top-28">
          {
            number && (
              <span class="block text-sm font-mono text-nordic-accent mb-2">
                {number}
              </span>
            )
          }
          <h2 class="text-2xl md:text-3xl font-display font-semibold">
            {title}
          </h2>
          {
            subtitle && (
              <p class="mt-3 text-nordic-gray-500 text-sm leading-relaxed max-w-xs">
                {subtitle}
              </p>
            )
          }

          <!-- Decorative line -->
          <div class="mt-6 w-12 h-px bg-nordic-accent"></div>
        </div>
      </div>

      <!-- Content area -->
      <div class="col-span-4 md:col-span-5 lg:col-span-8">
        <slot />
      </div>
    </div>
  </div>
</section>

<style>
  section {
    scroll-margin-top: 5rem;
  }
</style>
