---
interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
  class?: string;
}

const {
  href,
  type = 'button',
  variant = 'primary',
  size = 'md',
  disabled = false,
  class: className = '',
} = Astro.props;

const isLink = !!href;

const baseStyles = `
  inline-flex items-center justify-center gap-2
  font-medium rounded-full
  transition-all duration-300 ease-nordic
  disabled:opacity-50 disabled:cursor-not-allowed
`;

const variantStyles = {
  primary: `
    bg-nordic-black text-white
    hover:bg-nordic-gray-800
    active:bg-nordic-gray-900
  `,
  secondary: `
    bg-nordic-accent text-white
    hover:bg-nordic-accent-dark
    active:bg-nordic-accent-dark
  `,
  outline: `
    bg-transparent text-nordic-black
    border border-nordic-gray-300
    hover:border-nordic-black hover:bg-nordic-gray-50
    active:bg-nordic-gray-100
  `,
  ghost: `
    bg-transparent text-nordic-gray-600
    hover:text-nordic-black hover:bg-nordic-gray-100
    active:bg-nordic-gray-200
  `,
};

const sizeStyles = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};

const combinedStyles = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`;
---

{
  isLink ? (
    <a href={href} class={combinedStyles}>
      <slot />
    </a>
  ) : (
    <button type={type} disabled={disabled} class={combinedStyles}>
      <slot />
    </button>
  )
}
