# CelebrateKit Environment Configuration

# Server
PORT=3004
NODE_ENV=development
API_BASE_URL=http://localhost:3004

# Database
DATABASE_URL="file:./dev.db"

# API Security
API_KEY_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Feature Flags
FEATURE_CONFETTI=true
FEATURE_ACHIEVEMENTS=true
FEATURE_LEADERBOARD=true
FEATURE_SOUND_EFFECTS=true
FEATURE_CUSTOM_THEMES=true

# Defaults
DEFAULT_CONFETTI_DURATION=3000
DEFAULT_CONFETTI_PARTICLES=150

# Logging
LOG_LEVEL=debug
