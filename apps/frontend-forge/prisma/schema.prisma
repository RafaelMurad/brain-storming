generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?
  githubId      String?   @unique
  githubToken   String?

  // Learning progress
  level         Int       @default(1)
  xp            Int       @default(0)
  streak        Int       @default(0)
  lastActive    DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  exercises     UserExercise[]
  learningPaths UserLearningPath[]
}

model Technology {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  color       String   @default("#6366f1")
  category    String   @default("framework") // framework, library, tool, language
  difficulty  Int      @default(2) // 1-5

  exercises   Exercise[]
  learningPaths LearningPath[]

  createdAt   DateTime @default(now())
}

model Exercise {
  id            String   @id @default(uuid())
  title         String
  description   String
  objectives    String   // JSON array of learning objectives
  instructions  String   // Markdown instructions
  starterCode   String?  // JSON object with file contents
  solution      String?  // JSON object with solution code
  hints         String   @default("[]") // JSON array of hints

  // Metadata
  difficulty    Int      @default(2) // 1-5
  estimatedTime Int      @default(30) // minutes
  xpReward      Int      @default(100)
  tags          String   @default("[]") // JSON array

  // Relations
  technologyId  String
  technology    Technology @relation(fields: [technologyId], references: [id])
  pathSteps     LearningPathStep[]
  userProgress  UserExercise[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LearningPath {
  id            String   @id @default(uuid())
  title         String
  description   String
  icon          String?
  estimatedHours Int     @default(10)
  difficulty    Int      @default(2)

  technologyId  String
  technology    Technology @relation(fields: [technologyId], references: [id])

  steps         LearningPathStep[]
  userProgress  UserLearningPath[]

  createdAt     DateTime @default(now())
}

model LearningPathStep {
  id            String   @id @default(uuid())
  order         Int
  title         String
  description   String?

  pathId        String
  path          LearningPath @relation(fields: [pathId], references: [id], onDelete: Cascade)
  exerciseId    String
  exercise      Exercise @relation(fields: [exerciseId], references: [id])

  @@unique([pathId, order])
}

model UserExercise {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exerciseId    String
  exercise      Exercise @relation(fields: [exerciseId], references: [id])

  status        String   @default("not_started") // not_started, in_progress, completed, skipped
  repoUrl       String?  // GitHub repo URL
  repoName      String?
  startedAt     DateTime?
  completedAt   DateTime?
  timeSpent     Int      @default(0) // minutes
  attempts      Int      @default(0)
  rating        Int?     // 1-5 stars

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, exerciseId])
}

model UserLearningPath {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pathId        String
  path          LearningPath @relation(fields: [pathId], references: [id])

  currentStep   Int      @default(0)
  progress      Float    @default(0) // percentage
  startedAt     DateTime @default(now())
  completedAt   DateTime?

  @@unique([userId, pathId])
}

model GeneratedExercise {
  id            String   @id @default(uuid())
  prompt        String   // User's learning request
  technology    String
  difficulty    Int
  exerciseData  String   // JSON of generated exercise

  createdAt     DateTime @default(now())
}
